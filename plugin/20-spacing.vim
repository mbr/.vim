set expandtab

" set the width of a tabstop to 4
set tabstop=4

" set auto-indenting to 4 space
set softtabstop=4
set shiftwidth=4

" enable auto-indent
set autoindent

" enable smartindent
set smartindent

" make auto-indent copy indenting verbosely, instead of using
" as many tabs as possible
set copyindent

" make vim forget vi compatibility
set nocp
