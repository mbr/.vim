set expandtab

" set the width of a tabstop to 2
set tabstop=2

" set auto-indenting to 2 spaces
set softtabstop=2
set shiftwidth=2

" enable auto-indent
set autoindent

" enable smartindent
set smartindent

" make auto-indent copy indenting verbosely, instead of using
" as many tabs as possible
set copyindent

" make vim forget vi compatibility
set nocp
